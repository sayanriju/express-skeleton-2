#!/usr/bin/env node

/**
 * Module dependencies.
 */

const debug = require("debug")("skeleton:server")
const http = require("http")
const mongoose = require("mongoose")
const app = require("../app")
const logger = require("../lib/logger")

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  const port = parseInt(val, 10)

  // eslint-disable-next-line no-restricted-globals
  if (isNaN(port)) {
    // named pipe
    return val
  }

  if (port >= 0) {
    // port number
    return port
  }

  return false
}

/**
 * Get port from environment and store in Express.
 */

const port = normalizePort(process.env.PORT || "3000")
app.set("port", port)

/**
 * Create HTTP server.
 */

const server = http.createServer(app)
server.setTimeout(120000)
/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== "listen") {
    throw error
  }

  const bind = typeof port === "string"
    ? `Pipe ${port}`
    : `Port ${port}`

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case "EACCES":
      logger.fatal(`${bind} requires elevated privileges ğŸ’€ğŸ’£`)
      process.exit(1)
      break
    case "EADDRINUSE":
      logger.fatal(`${bind} is already in use ğŸ’€ğŸ’£`)
      process.exit(1)
      break
    default:
      throw error
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  const addr = server.address()
  const bind = typeof addr === "string"
    ? `pipe ${addr}`
    : `port ${addr.port}`
  logger.info(`Server listening on ${bind} ğŸš€`)
  debug(`Listening on ${bind}`)
}

/**
 * Main bootstrapping function:
 * Listen on provided port, on all network interfaces; after connecting to DB(s) if needed
 */
async function main() {
  try {
    mongoose.Promise = global.Promise
    mongoose.set("strictQuery", false)
    await mongoose.connect(process.env.MONGODB_CONNECTION_STRING)
    logger.info("Connected to Mongo DB via Mongoose ğŸ’ª")
  } catch (dbConnErr) {
    logger.error(`â¡ï¸ Failed to connect to Mongo DB via Mongoose: ${dbConnErr.message}`)
  } finally {
    server.listen(port)
    server.on("error", onError)
    server.on("listening", onListening)
  }
}
main() // immediately invoke it
